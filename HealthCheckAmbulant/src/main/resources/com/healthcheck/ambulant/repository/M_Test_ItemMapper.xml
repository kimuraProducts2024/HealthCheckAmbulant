<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- M_Test_Item情報のマッパー -->
<mapper namespace="com.healthcheck.ambulant.repository.M_Test_ItemMapper">
<!-- 戻り値の型定義：M_Test_Itemオブジェクト -->
  <resultMap type="com.healthcheck.ambulant.entity.M_Test_Item" id="resultMap2">
    <id column="user_id" property="user_id" />
    <result column="height" property="height" />
    <result column="weight" property="weight" />
    <result column="vision_right" property="vision_right" />
    <result column="vision_left" property="vision_left" />
    <result column="healing" property="healing" />
    <result column="systolic_blood_pressure" property="systolic_blood_pressure" />
    <result column="disastolic_blood_pressure" property="disastolic_blood_pressure" />
 </resultMap>
    <select id="selectM_Test_Item" resultMap="resultMap2">
    	SELECT * FROM m_test_item WHERE user_id = #{user_id}
    </select>
    <update id="updateHeight">
    	UPDATE m_test_item SET height = #{height} WHERE user_id = #{user_id}
    </update>
</mapper>


