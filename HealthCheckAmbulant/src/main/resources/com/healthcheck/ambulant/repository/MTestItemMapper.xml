<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- M_Test_Item情報のマッパー -->
<mapper namespace="com.healthcheck.ambulant.repository.MTestItemMapper">
<!-- 戻り値の型定義：MTestItemオブジェクト -->
  <resultMap type="com.healthcheck.ambulant.entity.MTestItem" id="resultMap2">
    <id column="user_id" property="userId" />
    <result column="height" property="height" />
    <result column="weight" property="weight" />
    <result column="vision_right" property="visionRight" />
    <result column="vision_left" property="visionLeft" />
    <result column="healing" property="healing" />
    <result column="systolic_blood_pressure" property="systolicBloodPressure" />
    <result column="disastolic_blood_pressure" property="disastolicBloodPressure" />
 </resultMap>
    <select id="selectMTestItem" resultMap="resultMap2">
    	SELECT * FROM m_test_item WHERE user_id = #{userId}
    </select>
    <update id="updateHeight">
    	UPDATE m_test_item SET height = #{height} WHERE user_id = #{userId}
    </update>
    <update id="updateWeight">
    	UPDATE m_test_item SET weight = #{weight} WHERE user_id = #{userId}
    </update>
    <update id="updateVision">
    	UPDATE m_test_item SET vision_right = #{visionRight}, vision_left = #{visionLeft} WHERE user_id = #{userId}
    </update>
</mapper>


